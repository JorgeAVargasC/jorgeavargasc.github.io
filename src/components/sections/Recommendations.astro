---
import UserCard from '@components/ui/user-card/UserCard.astro'
import { userInfo } from '@services/user-info/infrastructure/user-info'

const user = userInfo
const r = user.recommendations
const firstRow = r.slice(0, r.length / 2)
const secondRow = r.slice(r.length / 2)
---

<div class='relative grid'>
	<div class='flex flex-col gap-4 overflow-hidden'>
		<div
			class='animate-scroll-left flex w-max gap-4 will-change-auto hover:[animation-play-state:paused]'
		>
			{
				firstRow
					.concat(firstRow)
					.concat(firstRow)
					.map((review) => <UserCard {...review} />)
			}
		</div>

		<div
			class='animate-scroll-right flex w-max gap-4 will-change-auto hover:[animation-play-state:paused]'
		>
			{
				secondRow
					.concat(secondRow)
					.concat(secondRow)
					.map((review) => <UserCard {...review} />)
			}
		</div>

		<div
			class='to-background absolute top-0 left-0 h-full w-1/6 bg-gradient-to-l from-transparent'
		>
		</div>
		<div
			class='to-background absolute top-0 right-0 h-full w-1/6 bg-gradient-to-r from-transparent'
		>
		</div>
	</div>
</div>

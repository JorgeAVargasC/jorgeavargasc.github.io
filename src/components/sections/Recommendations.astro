---
import LinkedInIcon from '@components/ui/icons/LinkedInIcon.astro'
import LinkIcon from '@components/ui/icons/LinkIcon.astro'
import UserCard from '@components/ui/user-card/UserCard.astro'
import { userInfo } from '@services/user-info/infrastructure/user-info'

const user = userInfo
const r = user.recommendations
const firstRow = r.slice(0, r.length / 2)
const secondRow = r.slice(r.length / 2)
---

<div class='grid gap-5'>
	<div class='animate-fade-in-blur'>
		<div class='flex items-center justify-between'>
			<a
				href='#recommendations'
				class='group flex flex-row items-center'
			>
				<LinkIcon class='w-0 duration-200 group-hover:w-6' />
				<h2>Recommendations</h2>
			</a>

			<a
				href={user.links.linkedInRecommendations}
				target='_blank'
				rel='noreferrer noopener'
			>
				<button class='btn btn-outline bg-[#005FBF] hover:bg-[#005FBF]/80'>
					<LinkedInIcon />
					Show All
				</button>
			</a>
		</div>
	</div>

	<div
		class='relative flex w-full flex-col items-center justify-center overflow-hidden md:shadow-xl'
	>
		<div>
			{firstRow.map((review) => <UserCard {...review} />)}
		</div>
		<div>
			{secondRow.map((review) => <UserCard {...review} />)}
		</div>
		<div
			class='pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r from-white dark:from-background'
		>
		</div>
		<div
			class='pointer-events-none absolute inset-y-0 right-0 w-1/3 bg-gradient-to-l from-white dark:from-background'
		>
		</div>
	</div>
</div>
